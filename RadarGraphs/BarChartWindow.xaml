<Window x:Class="RadarGraphs.BarChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bar Chart" Height="520" Width="760"
        Background="#FF1E1E1E"
        Loaded="Window_Loaded"
        ResizeMode="NoResize">
    <Grid x:Name="RootGrid" Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#FF101010" CornerRadius="6" BorderBrush="#303030" BorderThickness="1" Padding="8" Grid.Row="0">
            <Grid>
                <ScrollViewer x:Name="ChartScrollViewer"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled"
                              CanContentScroll="False">
                    <Canvas x:Name="ChartCanvas" />
                </ScrollViewer>

                <StackPanel x:Name="LegendPanel" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8"/>
                <TextBlock x:Name="StatusText" Foreground="#FFB0B0B0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Text="No data" Visibility="Collapsed"/>
            </Grid>
        </Border>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,8,0,0">
            <TextBlock x:Name="TotalText" Foreground="#FFB0B0B0" VerticalAlignment="Center" Margin="8,0"/>
            <Button Click="ExportBar_Click" Padding="8,4" Margin="8,0">Export Image</Button>
            <Button Click="Close_Click" Padding="8,4" Margin="8,0">Close</Button>
        </StackPanel>
    </Grid>
</Window>